<project name="build" basedir="." default="build.tasks">
	<property name="src.dir" value="${basedir}/src"/>
	<property name="lib.dir" value="${basedir}/lib"/>
	<property name="target.dir" value="${basedir}/target"/>
	<property name="target.classes.dir" value="${target.dir}/classes"/>
	<property name="target.lib.dir" value="${target.dir}/lib"/>

	<path id="classpath">
		<fileset dir="${lib.dir}">
			<include name="**/*.jar"/>
		</fileset>
	</path>
	
	<target name="init">
		<mkdir dir="${target.dir}"/>
		<mkdir dir="${target.classes.dir}"/>
		<mkdir dir="${target.lib.dir}"/>
	</target>
		
	<target name="compile.tasks" depends="init">
		<javac srcdir="${src.dir}" destdir="${target.classes.dir}" excludes="org/restlet/build/js/test/**" classpathref="classpath"/>
		<copy todir="${target.classes.dir}">
		    <fileset dir="${src.dir}" includes="**/*.properties"/>
		  </copy>
	</target>

	<target name="build.tasks" depends="compile.tasks">
		<jar jarfile="${target.lib.dir}/org.restlet.js.build.jar" basedir="${target.classes.dir}"/>
	</target>

</project>